<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefaultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/toCreateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectFragment"
            android:text="Create A New Advert" />

        <Button
            android:id="@+id/toLFButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectFragment"
            android:text="Show All Lost And Found Items" />

        <Button
            android:id="@+id/mapShowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mapShowArticles"
            android:text="Show On Map" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>